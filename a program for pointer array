#include <bits/stdc++.h>
using namespace std;

int main()
{
    int a =10;
    int *aptr = &a;
    cout<<*aptr<<endl;
    *aptr = 20;
    cout<<a<<endl;
    int ar[] = {10,20,30};
    cout<<*ar<<endl;
    int *ptr = ar;
    for(int i=0;i<3;i++)
    {
        cout<<*ptr<<endl;//cout<<*(ar+i)
        ptr++;           //we can write it instead of ptr
    }
    return 0;
}
